 <!-- all template pages -->

 <head>
   <meta charset="UTF-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />

   <link rel="stylesheet" href="/stylesheet/style.css" />
 </head>


<body>
  <h1>Edit <%= car.name %></h1>
  <form action="/cars/<%= car._id %>?_method=PUT" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= car.name %>">
    <br>
    <label for="isLuxury">Luxury?</label>
    <input type="checkbox" name="isLuxury" id="isLuxury" 
    <% if (car.isLuxury) { %> 
      checked 
    <% } %>
    >
    <br>
    <button type="submit">Update Cars</button>
  </form>
</body>